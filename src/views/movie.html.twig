{% extends "base.html.twig" %}

{% block title %}Movies{% endblock %}

{% block content %}

  <h1>{{ movie.title }} ({{ movie.date | date('d/m/Y') }})</h1>
  <small>
    {{ movie.genre.name }} - {{ movie.director.firstname }}&nbsp;{{ movie.director.lastname }}
  </small>

  <div>
    <img src="{{ movie.coverImage }}" width="100">
  </div>

  <p>{{ movie.description }}</p>

  <h2>Actors</h2>
  
    {% for actor in movie.actors %} 
        {{ actor.firstname }}&nbsp; {{ actor.lastname }}
    {% endfor %}

{% endblock %}